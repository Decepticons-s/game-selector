.container {
  padding: 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.form {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.input, .textarea {
  width: 100%;
  padding: 20rpx;
  border: 1px solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.textarea {
  min-height: 200rpx;
}

.player-count {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.input-small {
  flex: 1;
  padding: 20rpx;
  border: 1px solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.separator {
  font-size: 28rpx;
  color: #999;
}

.unit {
  font-size: 28rpx;
  color: #666;
}

.picker {
  padding: 20rpx;
  border: 1px solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.tag {
  background: #FF6B35;
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.tag-remove {
  font-size: 32rpx;
  font-weight: bold;
}

.tag-input-box {
  display: flex;
  gap: 20rpx;
}

.tag-input {
  flex: 1;
  padding: 20rpx;
  border: 1px solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.tag-add-btn {
  background: #FF6B35;
  color: white;
}

.cover-upload {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.cover-image {
  width: 100%;
  height: 400rpx;
  border-radius: 10rpx;
}

.upload-btn {
  background: #FF6B35;
  color: white;
}

.images-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.image-item {
  position: relative;
  width: 100%;
  padding-bottom: 100%;
}

.image {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.image-remove {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: red;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
}

.add-image-btn {
  width: 100%;
  padding-bottom: 100%;
  background: #f0f0f0;
  border: 2px dashed #ccc;
  border-radius: 10rpx;
  font-size: 60rpx;
  color: #999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn {
  width: 100%;
  background: #FF6B35;
  color: white;
  margin-top: 40rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
}
