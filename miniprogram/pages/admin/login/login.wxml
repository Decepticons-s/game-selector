<view class="container">
  <view class="login-box">
    <image class="logo" src="/images/logo.png" mode="aspectFit"></image>
    <text class="title">管理员登录</text>
    <text class="desc">仅限管理员访问</text>

    <button
      class="login-btn"
      type="primary"
      bindtap="login"
      loading="{{loading}}"
      disabled="{{loading}}"
    >
      {{loading ? '登录中...' : '微信登录'}}
    </button>
  </view>
</view>
