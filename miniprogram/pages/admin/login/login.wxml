<view class="container">
  <view class="login-box">
    <image class="logo" src="/images/logo.png" mode="aspectFit"></image>

    <block wx:if="{{status === 'checking'}}">
      <text class="title">身份验证中...</text>
    </block>

    <block wx:elif="{{status === 'success'}}">
      <text class="title">验证通过</text>
      <text class="desc">正在跳转...</text>
    </block>

    <block wx:else>
      <text class="title">无访问权限</text>
      <text class="desc">当前账号不是管理员</text>
    </block>
  </view>
</view>
