.container {
  background: linear-gradient(135deg, #f9fafb 0%, #ffffff 50%, #f9fafb 100%);
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.cover-image {
  width: 100%;
  height: 500rpx;
  background: #f3f4f6;
}

.game-info {
  padding: 40rpx;
}

.game-name {
  font-size: 48rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 40rpx;
  display: block;
  letter-spacing: -0.5rpx;
}

.meta-row {
  display: flex;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.meta-item {
  flex: 1;
  background: white;
  padding: 24rpx;
  border-radius: 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid #e5e7eb;
}

.meta-label {
  display: block;
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 12rpx;
}

.meta-value {
  display: block;
  font-size: 32rpx;
  color: #111827;
  font-weight: 600;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 40rpx;
}

.tag {
  background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
  color: white;
  padding: 12rpx 28rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

.description {
  background: white;
  padding: 32rpx;
  border-radius: 24rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid #e5e7eb;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 24rpx;
  letter-spacing: -0.5rpx;
}

.description-text {
  font-size: 28rpx;
  color: #6b7280;
  line-height: 1.8;
}

.images {
  background: white;
  padding: 32rpx;
  border-radius: 24rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid #e5e7eb;
}

.images-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.detail-image {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
  background: #f3f4f6;
}

.videos {
  background: white;
  padding: 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid #e5e7eb;
}

.video-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.video-item {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.video-player {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  background: #f3f4f6;
}

.video-title {
  font-size: 28rpx;
  color: #6b7280;
}

.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 40rpx;
  background: white;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.action-btn {
  width: 100%;
  background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
  color: white;
  border-radius: 100rpx;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.3);
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
}

.loading-text {
  font-size: 28rpx;
  color: #9ca3af;
}
