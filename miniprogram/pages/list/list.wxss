.container {
  padding: 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.filter {
  background: white;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.filter-label {
  font-size: 28rpx;
  color: #333;
  white-space: nowrap;
}

.filter-input {
  flex: 1;
  padding: 20rpx;
  border: 1px solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.game-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.game-card {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  display: flex;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.game-cover {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}

.game-info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.game-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.game-meta {
  display: flex;
  gap: 20rpx;
  margin-bottom: 10rpx;
}

.player-count, .duration {
  font-size: 24rpx;
  color: #999;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag {
  background: #FFE5DC;
  color: #FF6B35;
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.empty {
  text-align: center;
  padding: 100rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.loading {
  text-align: center;
  padding: 100rpx 0;
  font-size: 28rpx;
  color: #999;
}
