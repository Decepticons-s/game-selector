.container {
  padding: 40rpx;
  background: linear-gradient(135deg, #f9fafb 0%, #ffffff 50%, #f9fafb 100%);
  min-height: 100vh;
}

.filter {
  background: white;
  padding: 24rpx 48rpx;
  border-radius: 100rpx;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid #e5e7eb;
}

.filter-label {
  font-size: 28rpx;
  color: #6b7280;
  white-space: nowrap;
}

.filter-input {
  flex: 1;
  padding: 0;
  border: none;
  font-size: 32rpx;
  text-align: center;
  color: #111827;
  font-weight: 500;
}

.game-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.game-card {
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  display: flex;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid #e5e7eb;
}

.game-cover {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
  background: #f3f4f6;
}

.game-info {
  flex: 1;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.game-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 12rpx;
  letter-spacing: -0.5rpx;
}

.game-meta {
  display: flex;
  gap: 24rpx;
  margin-bottom: 12rpx;
}

.player-count, .duration {
  font-size: 24rpx;
  color: #6b7280;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  background: #eff6ff;
  color: #3b82f6;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.empty {
  text-align: center;
  padding: 100rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #9ca3af;
}

.loading {
  text-align: center;
  padding: 100rpx 0;
  font-size: 28rpx;
  color: #9ca3af;
}
