.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f9fafb 0%, #ffffff 50%, #f9fafb 100%);
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  text-align: center;
  margin-bottom: 80rpx;
}

.title {
  display: block;
  font-size: 56rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 16rpx;
  letter-spacing: -0.5rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #6b7280;
}

.wheel-container {
  width: 600rpx;
  height: 800rpx;
  margin-bottom: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  perspective: 2000rpx;
}

.game-card {
  width: 100%;
  height: 100%;
  position: relative;
  transform-style: preserve-3d;
  transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

.game-card.flipped {
  transform: rotateY(180deg);
}

.card-face {
  position: absolute;
  width: 100%;
  height: 100%;
  backface-visibility: hidden;
  -webkit-backface-visibility: hidden;
  border-radius: 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 16rpx 64rpx rgba(0, 0, 0, 0.12);
}

.card-front {
  background: linear-gradient(135deg, #f9fafb 0%, #f3f4f6 100%);
  border: 4rpx solid #e5e7eb;
}

.card-back {
  background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
  border: 4rpx solid #60a5fa;
  transform: rotateY(180deg);
  padding: 80rpx 60rpx;
}

.card-icon-wrapper {
  width: 128rpx;
  height: 128rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 24rpx;
}

.card-icon {
  font-size: 64rpx;
  color: #9ca3af;
}

.card-placeholder {
  font-size: 28rpx;
  color: #9ca3af;
}

.card-content {
  width: 100%;
  color: white;
}

.card-title {
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 32rpx;
  text-align: center;
  letter-spacing: -0.5rpx;
}

.card-description {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 48rpx;
  text-align: center;
}

.card-info {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.card-info-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 28rpx;
}

.card-info-icon {
  font-size: 32rpx;
}

.input-section {
  width: 100%;
  max-width: 600rpx;
  background: white;
  border-radius: 100rpx;
  padding: 24rpx 48rpx;
  margin-bottom: 60rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid #e5e7eb;
  display: flex;
  align-items: center;
  justify-content: center;
}

.input-label {
  display: flex;
  align-items: center;
  margin-right: 24rpx;
}

.label-icon {
  font-size: 36rpx;
  margin-right: 0;
}

.label-text {
  display: none;
}

.player-input {
  width: 240rpx;
  height: 60rpx;
  background: transparent;
  border: none;
  padding: 0;
  font-size: 40rpx;
  text-align: center;
  color: #111827;
  font-weight: 500;
}

.input-unit {
  font-size: 28rpx;
  color: #9ca3af;
  margin-left: 8rpx;
}

.draw-btn {
  width: 100%;
  max-width: 600rpx;
  height: 96rpx;
  background: white;
  color: #111827;
  border-radius: 100rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid #e5e7eb;
  transition: all 0.3s;
}

.draw-btn[disabled] {
  background: #f3f4f6;
  color: #9ca3af;
  box-shadow: none;
}

.reset-btn {
  width: 100%;
  max-width: 600rpx;
  height: 96rpx;
  background: white;
  color: #111827;
  border-radius: 100rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid #e5e7eb;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.reset-icon {
  font-size: 36rpx;
}

.quick-actions {
  width: 100%;
  max-width: 600rpx;
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.action-btn {
  flex: 1;
  background: white;
  color: #111827;
  border-radius: 24rpx;
  padding: 32rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  border: 2rpx solid #e5e7eb;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.action-icon {
  font-size: 48rpx;
}

.action-text {
  font-size: 24rpx;
  color: #6b7280;
}

.game-count {
  text-align: center;
  color: #9ca3af;
  font-size: 24rpx;
}

.loading {
  text-align: center;
  color: #9ca3af;
  font-size: 28rpx;
  padding: 40rpx 0;
}
