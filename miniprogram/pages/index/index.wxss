.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.wheel-container {
  width: 500rpx;
  height: 500rpx;
  margin-bottom: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wheel {
  width: 400rpx;
  height: 400rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.3);
  transition: transform 3s cubic-bezier(0.25, 0.1, 0.25, 1);
}

.wheel.spinning {
  transition: transform 3s cubic-bezier(0.25, 0.1, 0.25, 1);
}

.wheel-center {
  text-align: center;
  padding: 40rpx;
}

.wheel-icon {
  display: block;
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.wheel-text {
  display: block;
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.input-section {
  width: 100%;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.input-label {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.label-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.label-text {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.player-input {
  width: 100%;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 15rpx;
  padding: 0 20rpx;
  font-size: 32rpx;
}

.draw-btn {
  width: 100%;
  height: 90rpx;
  background: #FF6B35;
  color: white;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  box-shadow: 0 5rpx 20rpx rgba(255, 107, 53, 0.4);
}

.draw-btn[disabled] {
  background: #ccc;
  box-shadow: none;
}

.quick-actions {
  width: 100%;
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.action-btn {
  flex: 1;
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border-radius: 15rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.action-icon {
  font-size: 40rpx;
}

.action-text {
  font-size: 24rpx;
}

.game-count {
  text-align: center;
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
}

.loading {
  text-align: center;
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
  padding: 40rpx 0;
}
