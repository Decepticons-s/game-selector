/* 整体页面 */
page {
  background: linear-gradient(180deg, #FFFFFF 0%, #F3F4F6 100%);
}

.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFFFFF 0%, #F3F4F6 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 30rpx;
  position: relative;
  overflow-x: hidden;
}

/* 页面标题 */
.page-header {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 50rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: #1F2937;
}

.subtitle {
  font-size: 28rpx;
  color: #9CA3AF;
  margin-top: 14rpx;
}

/* 人数输入区域 */
.player-input-section {
  width: 100%;
  margin-bottom: 60rpx;
  display: flex;
  justify-content: center;
}

.input-container {
  width: 100%;
  height: 88rpx;
  background: #F3F4F6;
  border-radius: 44rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.03);
}

.player-input {
  width: 100%;
  height: 100%;
  background: transparent;
  border: none;
  font-size: 32rpx;
  color: #1F2937;
  box-sizing: border-box;
  outline: none;
}

.player-input::placeholder {
  color: #9CA3AF;
}

/* 中央抽取区域 */
.central-card {
  width: calc(100% + 60rpx);
  margin-left: -30rpx;
  margin-right: -30rpx;
  height: 680rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

/* 卡片内容 */
.card-content {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
}

/* 游戏图标按钮 */
.game-icon {
  width: 130rpx;
  height: 130rpx;
  background: #FFB020;
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-image {
  width: 80rpx;
  height: 80rpx;
}

/* 点击提示 */
.click-hint {
  font-size: 28rpx;
  color: #9CA3AF;
  margin-top: 22rpx;
}

/* Canvas 区域 */
.canvas-wrapper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.game-canvas {
  width: 100%;
  height: 100%;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-text {
  color: #667eea;
  font-size: 32rpx;
}
