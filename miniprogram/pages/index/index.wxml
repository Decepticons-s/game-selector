<view class="page">
  <!-- 页面标题 -->
  <view class="page-header">
    <text class="title" bindlongpress="onTitleLongPress">今天玩什么</text>
    <text class="subtitle">输入玩家人数，点击卡片抽取游戏</text>
  </view>

  <!-- 人数输入区域 -->
  <view class="player-input-section">
    <view class="input-container">
      <input
        class="player-input"
        type="number"
        placeholder="请输入人数"
        value="{{playerCount}}"
        bindinput="onPlayerCountInput"
      />
    </view>
  </view>

  <!-- 中央抽取卡片 -->
  <view class="central-card" bindtap="startDraw">
    <!-- Canvas 区域 -->
    <view class="canvas-wrapper">
      <canvas type="2d" id="gameCanvas" class="game-canvas"></canvas>
    </view>
  </view>

  <!-- 加载状态 -->
  <view class="loading-overlay" wx:if="{{loading}}">
    <text class="loading-text">加载中...</text>
  </view>
</view>
